{
  "compilerOptions": {
    "target": "ES6", // Cho phép biên dịch TS sang kiểu ES6
    "module": "commonjs", // CommonJS là tiêu chuẩn được sử dụng trong NodeJS để làm việc với các module
    "removeComments": true, // Xóa comments khi biên dịch sang file js 
    "esModuleInterop": true, // Dùng được từ khóa import thay cho require
    "outDir": "dist"
  }
}